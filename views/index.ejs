<% include header.ejs %>

<% if(!user){ %>
<div class="jumbotron">
    <h1>欢迎来到<span class="blue">知识库</span></h1>
    <p>知识库 是一个基于nodjs的知识分享系统,欢迎把你好的想法和经验通过知识库分享。</p>
    <p>
        <a class="btn btn-success btn-large" href="/login">登录</a>
        <a class="btn btn-large" href="/reg">注册</a>
    </p>
</div>
<% } %>

<% if(user){ %>
<form action="/post" method="post" style="text-align:center;" class="well form-inline center">
    <input type="text" name="post" class="col-sm-8 col-sm-offset-1" />
    <button type="submit" style="float:left;margin-left: 10px;" class="btn btn-success">
        <i class="glyphicon glyphicon-comment">发言</i>
    </button>
    <div style="clear: both;"></div>
</form>
<% } %>

<% posts.forEach(function(post, index){
if(index %3 == 0){  %>
<div class="row">
    <% } %>
    <div class="col-sm-4">
        <h2><a href="/u/<%=post.user %>"><%=post.user %></a>说</h2>
        <p><small><%=post.time %></small></p>
        <p><%=post.post %></p>
    </div>
<% if(index %3 == 2){ %>
    </div>
<% } %>
<% }); %>


<% if(posts.length %3 != 0){ %>
    </div>
<% } %>


<% include footer.ejs %>
