<% include header.ejs %>

<script type="text/javascript">
    function _reset()
    {
        $('form').each(function(){
            this.reset();
            for(instance in CKEDITOR.instances)
            {
                CKEDITOR.instances[instance].setData('');
            }
        });
    }


</script>

<form role="form" action="/share" method="post">
    <div class="form-group">
        <label for="title">主&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;题</label>
        <input type="text" class="form-control" id="marker" name="marker" placeholder="川普当选了...">
    </div>
    <div class="form-group">
        <label for="content">详细内容</label>
        <textarea rows="20" class="form-control ckeditor" name="editor1" id="editor1">请输入...</textarea>
        <script type="text/javascript">CKEDITOR.replace('editor1');</script>
    </div>
    <button type="submit" class="btn btn-warning">分享</button>
    <button type="reset" class="btn btn-default" onclick="javascript:_reset();">重置</button>
</form>


<% include footer.ejs %>

<script type="text/javascript" src="/ckeditor/ckeditor.js"></script>